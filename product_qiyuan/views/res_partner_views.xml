<odoo>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">view_partner_form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <page name='sales_purchases' position="after">
                    <page name='price' string="单价及运费设置" attrs="{'invisible': [('supplier', '=', True)]}" groups="product_qiyuan.group_set_customer_price">
                        <group string="加气砖单价" name="price">
                            <field name="unit_price_per_cubic_metre"/>
                        </group>
                        <group string="工地距离" name="distance">
                            <field name="distance"/>
                        </group>
                        <group string="运输单价(元/公里)" name="carrying_price">
                            <field name="carrying_price"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>
        <record id="view_partner_form_add_credit_limit" model="ir.ui.view">
            <field name="name">view_partner_form_add_credit_limit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <group name="accounting_entries" position="after">
                    <group string="信用额度" name="accounting_credit_limit" groups="product_qiyuan.group_set_customer_price">
                        <field name="credit_limit"/>
                    </group>
                </group>
            </field>
        </record>
    </data>
</odoo>